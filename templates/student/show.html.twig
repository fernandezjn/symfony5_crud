{% extends 'base.html.twig' %}

{% block title %}View Student{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card mt-5 ">
                    <h5 class="card-header fw-bold">View Student</h5>
                    <div class="card-body">
                        <table class="table">
                            <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ student.id }}</td>
                            </tr>
                            <tr>
                                <th>Student_number</th>
                                <td>{{ student.studentNumber }}</td>
                            </tr>
                            <tr>
                                <th>Name</th>
                                <td>{{ student.name }}</td>
                            </tr>
                            <tr>
                                <th>Course</th>
                                <td>{{ student.course }}</td>
                            </tr>
                            <tr>
                                <th>Year_level</th>
                                <td>{{ student.yearLevel }}</td>
                            </tr>
                            </tbody>
                        </table>

                    </div>
                    <div class="card-footer">
                        <div class="d-flex bd-highlight">
                            <div class="me-auto bd-highlight">
                                <a class="btn btn-primary btn-sm" href="{{ path('student_index') }}"><i class="far fa-arrow-alt-circle-left"></i> Back</a>
                            </div>
                            <div class="bd-highlight">
                                <a class="btn btn-secondary btn-sm mx-1" href="{{ path('student_edit', {'id': student.id}) }}"><i class="far fa-edit"></i> Edit</a>
                            </div>
                            <div class="bd-highlight">{{ include('student/_delete_form.html.twig') }}</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>




{% endblock %}
